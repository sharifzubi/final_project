.row
  .col-md-4
    %h1= @user.username

    %p
      %b= @user.first_name
      %b= @user.last_name
    .profile-image
      = image_tag @user.avatar
    %p
      %b Favourite Location:
      = @user.favourite_location
    %p
      %b About Me:
      = @user.about_me

.dash-unit
  #links.right
  - if current_user == true
    = link_to "Update Profile", edit_user_registration_path
